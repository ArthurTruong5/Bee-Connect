.bgwhite.sb1.mt20.mwidth960.mauto.padding20
  = render 'common_links'
  %hr
  - if current_user.is_university_approved(@university.id)
    #university_messages{'data-university-id': @university.id }
      - @university.university_message.order(created_at: :asc).reverse_order().limit(150).each do |message|
        = render 'messages',message: message

    = form_for @university_message, url: '#' do |f| 
      .form-group
        = f.text_area :body, class: 'form-control'
      = f.submit "Send Messages", class: 'btn btn-primary '